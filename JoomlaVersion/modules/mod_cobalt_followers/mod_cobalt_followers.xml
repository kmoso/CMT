<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>Cobalt - Module - Who Follows User</name>
	<author>MintJoomla</author>
	<creationDate>June 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2012 MintJoomla (http://www.mintjoomla.com). All rights reserved.</copyright>
	<license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>support@mintjoomla.com</authorEmail>
	<authorUrl>http://www.mintjoomla.com</authorUrl>
	<version>8.25</version>

	<description><![CDATA[ Cobalt followers or current user ]]></description>
	<files>
		<filename module="mod_cobalt_followers">mod_cobalt_followers.php</filename>
		<filename>index.html</filename>
		<folder>tmpl/</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset label="General" name="general" addfieldpath="/libraries/mint/forms/fields/">
				<field name="ava_style" type="list" default="img-polaroid" label="Avatar style">
					<option value="img-polaroid">Polaroid</option>
					<option value="img-rounded">Rounded</option>
					<option value="img-circle">Circle</option>
				</field>
				<field name="ava_size" type="text" default="32" size="3" label="Avatar size" />
				<field name="limit" type="text" default="10" size="3" label="Limit" />
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
			</fieldset>
		</fields>
	</config>
</extension>