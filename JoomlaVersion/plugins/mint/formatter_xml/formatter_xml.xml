<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="mint" method="upgrade">
	<name>Cobalt - Plugin - Formatter - XML</name>
    <author>MintJoomla</author>
    <creationDate>October 15 2012</creationDate>
    <copyright>MintJoomla</copyright>
    <license>GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
    <authorEmail>support@mintjoomla.com</authorEmail>
    <authorUrl>http://www.mintjoomla.com</authorUrl>
	<version>8.24</version>
	<description>
	<![CDATA[ XML formatter plugin for Cobalt 8 ]]>
	</description>
	<files>
		<filename plugin="formatter_xml">formatter_xml.php</filename>
		<folder>tmpl</folder>
	</files>
    <config>
        <fields name="params">
            <fieldset name="general" label="General">
                <field type="filelist" name="tmpl_list" filter="php$" hide_none="1" hide_default="1" directory="/plugins/mint/formatter_xml/tmpl/list" label="List template" default="xml.php" />
                <field type="filelist" name="tmpl_full" filter="php$" hide_none="1" hide_default="1" directory="/plugins/mint/formatter_xml/tmpl/record" label="Full template" default="xml.php" />
            </fieldset>
        </fields>
    </config>
</extension>
