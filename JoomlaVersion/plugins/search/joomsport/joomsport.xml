<?xml version="1.0" encoding="utf-8"?>
<extension version="2.0.3" type="plugin" group="search">
<name>JoomSport Search Plugin</name>
<creationDate>December 2013</creationDate>
<author>Christopher Valmas</author>
<authorEmail>cvalmas@freemail.gr</authorEmail>
<authorUrl>www.joomsport.com</authorUrl>
<copyright>Open Source</copyright>
<license>GNU/GPL</license>
<version>2.0.3</version>
<description>Search in JoomSport's Teams, Players, Matches and Extra Fields</description>
<files>
   <filename plugin="joomsport">joomsport.php</filename>
</files>
<languages>
   <language tag="en-GB">language/en-GB/en-GB.plg_search_joomsport.ini</language>
   <language tag="el-GR">language/el-GR/el-GR.plg_search_joomsport.ini</language>
</languages>
<params>
	<param name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
	<param name="players" class="btn-group" type="radio" default="1" label="Players" description="Search in Players Table">
	<option value="0">No</option>
        <option value="1">Yes</option>
       </param>
       <param name="teams" class="btn-group" type="radio" default="1" label="Teams" description="Search in Teams Table">
	<option value="0">No</option>
        <option value="1">Yes</option>
       </param>
       <param name="matches" class="btn-group" type="radio" default="1" label="Match" description="Search in Season Matches">
	<option value="0">No</option>
        <option value="1">Yes</option>
       </param>
</params>
<config>
	<fields name="params">

		<fieldset name="basic">
			<field name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
			<field name="players" class="btn-group" type="radio" default="1" label="Players" description="Search in Players Table">
			<option value="0">No</option>
			<option value="1">Yes</option>
		       </field>
		       <field name="teams" class="btn-group" type="radio" default="1" label="Teams" description="Search in Teams Table">
			<option value="0">No</option>
			<option value="1">Yes</option>
		       </field>
		       <field name="matches" class="btn-group" type="radio" default="1" label="Match" description="Search in Season Matches">
			<option value="0">No</option>
			<option value="1">Yes</option>
		       </field>
		</fieldset>
	</fields>
</config>
<administration>
<languages folder="administrator/language">
   <language tag="en-GB">en-GB/en-GB.plg_search_joomsport.ini</language>
   <language tag="el-GR">el-GR/el-GR.plg_search_joomsport.ini</language>
</languages>
</administration>
</extension>
