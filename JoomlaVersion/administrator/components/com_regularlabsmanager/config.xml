<?xml version="1.0" encoding="utf-8"?>
<config addfieldpath="/libraries/regularlabs/fields">
	<fieldset name="options" label="JOPTIONS">
		<field name="@loadlanguage" type="rl_loadlanguage" extension="com_regularlabsmanager" />
		<field name="@block_key_a" type="rl_block" start="1" label="RLEM_DOWNLOAD_KEY"
			   description="RLEM_DOWNLOAD_KEY_DESC,&lt;a href=&quot;https://www.regularlabs.com/purchase&quot; target=&quot;_blank&quot;&gt;,&lt;/a&gt;,&lt;a href=&quot;https://www.regularlabs.com/downloads&quot; target=&quot;_blank&quot;&gt;,&lt;/a&gt;" />
		<field name="key" type="rl_key"
			   filter="raw"
			   label="RLEM_DOWNLOAD_KEY"
		/>
		<field name="@block_key_b" type="rl_block" end="1" />
		<field name="@block_other_a" type="rl_block" start="1" />
		<field name="check_data" type="radio" class="btn-group" default="1" label="RLEM_CHECK_DATA" description="RLEM_CHECK_DATA_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="hide_notinstalled" type="radio" class="btn-group" default="0" label="RLEM_HIDE_NOTINSTALLED" description="RLEM_HIDE_NOTINSTALLED_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="show_key_field" type="radio" class="btn-group" default="1" label="RLEM_SHOW_KEY_FIELD" description="RLEM_SHOW_KEY_FIELD_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="show_reinstall_all" type="radio" class="btn-group" default="1" label="RLEM_SHOW_REINSTALL_ALL" description="RLEM_SHOW_REINSTALL_ALL_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="show_copyright" type="radio" class="btn-group" default="1" label="RL_SHOW_COPYRIGHT" description="RL_SHOW_COPYRIGHT_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="timeout" type="text" size="5" default="5" label="RLEM_TIMEOUT" description="RLEM_TIMEOUT_DESC" />
		<field name="@block_other_b" type="rl_block" end="1" />
	</fieldset>

	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules" filter="rules" validate="rules" component="com_regularlabsmanager" section="component"
			   label="JCONFIG_PERMISSIONS_LABEL">
			<action name="core.admin" title="JACTION_ADMIN" description="JACTION_ADMIN_COMPONENT_DESC" />
			<action name="core.manage" title="JACTION_MANAGE" description="JACTION_MANAGE_COMPONENT_DESC" />
		</field>
	</fieldset>
</config>
