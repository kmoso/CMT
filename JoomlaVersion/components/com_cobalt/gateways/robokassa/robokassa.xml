<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="pay">
		<fieldset name="settings" label="Settings">
			<field name="url2" type="creturnurl" processor="robokassa" label="Success Url" description="Set this url in robokassa account"/>
			<field name="url" type="cipnurl" processor="robokassa" label="Result Url" description="Set this url in robokassa account"/>
			<field name="shopid" size="50" type="text" default="" label="Идентификатор магазина"/>
			<field name="merpas1" size="50" type="password" default="" label="Пароль #1"/>
			<field name="merpas2" size="50" type="password" default="" label="Пароль #2"/>
			<field name="lang" type="radio" class="btn-group" label="Язык" default="en">
				<option value="en">EN</option>
				<option value="ru">RU</option>
			</field>
			<field name="default_currency" type="list" default="RUB" label="Валюта" >
				<option value="RUB">Russian Ruble (RUB)</option>
				<option value="USD">U.S. Dollar (USD)</option>
			</field>
		</fieldset>
	</fields>

</form>