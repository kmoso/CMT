	<version>8.18</version>
	<description>Template Category select</description>

	<fields name="tmpl_params">
		<fieldset name="general">
			<field name="single_catselect_size" type="text" size="2" default="1" label="CCATSELECTSIZESINGLE" description="CCATSELECTSIZESINGLEDESC"/>
			<field name="multiple_catselect_size" type="text" size="2" default="20" label="CCATSELECTSIZEMULTI" description="CCATSELECTSIZEMILTIDESC"/>
			<field name="cat_ordering" type="list" label="CORDERING" default="c.lft ASC">
				<option value="c.lft ASC">CORDERING</option>
				<option value="c.title ASC">CORDERNAMEASC</option>
				<option value="c.title DESC">CORDERNAMEDESC</option>
			</field>
			<field name="first_element" type="text" default="- Select Category -" label="CCATFERSTELEMENT" />
		</fieldset>
	</fields>
	<fields name="tmpl_core">
		<fieldset name="general2">
			<field name="category_label" type="radio" class="btn-group" label="CSHOWLABEL" default="1">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>
	</fields>
</form>