<?xml version="1.0" encoding="utf-8"?>
<cobaltfield>
	<name>Passwd</name>
	<group>Simple Form Elements</group>
	
	<config><fields name="params">
		<fieldset name="tmpl">
			<field type="filelist" name="template_input" filter="php$" hide_none="1" hide_default="1" directory="/components/com_cobalt/fields/passwd/tmpl/input" label="F_TMPLINPUT" default="default.php" />
			<field type="filelist" name="template_output_list" filter="php$" hide_none="1" hide_default="1" directory="/components/com_cobalt/fields/passwd/tmpl/output" label="F_TMPLLIST" default="default.php" />
			<field type="filelist" name="template_output_full" filter="php$" hide_none="1" hide_default="1" directory="/components/com_cobalt/fields/passwd/tmpl/output" label="F_TMPLFULL" default="default.php" />
		</fieldset>
		<fieldset name="general" label="FS_GENERAL">
		<field name="show_edit" type="radio" class="btn-group" label="F_SHOWSAVEDONEDIT" default="0" description="F_SHOWSAVEDONEDIT_DESCR">
			<option value="0">No</option>		
			<option value="1">Yes</option>	
		</field>
		<field name="allow_view" type="accesslevel" multiple="0" default="0" label="F_WHOCANVIEWSAVED" description="F_WHOCANVIEWSAVED_DESCR" >
			<option value="0">XML_OPT_NOONE</option>
		</field>
		<field name="secret_word" type="password" label="F_SECRETWORD" default="joomla!" description="F_SECRETWORD_DESCR" />
		<field name="show_label" type="text" label="F_SHOWPASWLABEL" default="Show password" size="40" />
		</fieldset>
	</fields>
	
</config></cobaltfield>