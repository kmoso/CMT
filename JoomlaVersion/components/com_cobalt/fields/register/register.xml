<?xml version="1.0" encoding="utf-8"?>
<cobaltfield>
	<name>Register</name>
	<group>Exclusive Form Elements</group>
	<config>
		<fields name="params">
			<fieldset name="tmpl">
				<field type="filelist" name="template_input" filter="php$" hide_none="1" hide_default="1" directory="/components/com_cobalt/fields/register/tmpl/input" label="F_TMPLINPUT" default="default.php" />
			</fieldset>
			<fieldset name="GEN" label="FS_GENERAL">
				<field name="field_id_email" key="id" type="meresourcesfields" size="1" multiple="false" default="" label="CR_EMAILFIELD" filters="'email','text'" description="CR_EMAILFIELDDESCR" />
				<field name="new_usertype" type="usergroup" default="" multiple="true" label="CR_USERGROUP" description="CR_USERGROUPDESCR">
				</field>
			</fieldset>
			<fieldset name="reg" label="FS_REG">
				<field name="name" type="radio" class="btn-group" default="0" label="CR_NAME">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="loginname" type="radio" class="btn-group" default="1" label="CR_LOGINNAME" description="CR_LOGINNAMEDESCR">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="loginform" type="radio" class="btn-group" default="1" label="CR_LOGINFORM" description="">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</cobaltfield>